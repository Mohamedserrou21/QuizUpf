{% extends 'base.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block body %}
	<h1>Quiz</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ quiz.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ quiz.Titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ quiz.Description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ quiz.Image }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ quiz.updatedAt ? quiz.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			{% for question in quiz.questions %}
				<div>
					<h5>{{ question.content }}</h5>
					<ul>
						{% for answer in question.answers %}
							<li>{{ answer.content }}</li>
						{% endfor %}
					</ul>
				</div>
			{% endfor %}
		</tbody>
	</div>
</tbody></table><a href="{{ path('app_quiz_index') }}">back to list</a><a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">edit</a>{{ include('quiz/_delete_form.html.twig') }}{% endblock %}
